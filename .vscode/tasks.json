{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "Package Extension",
            "type": "shell",
            "command": "vsce",
            "args": ["package"],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always"
            },
            "dependsOn": "npm: compile"
        }
    ]
}
