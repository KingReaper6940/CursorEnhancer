{
  "name": "cursor-prompt-enhancer",
  "displayName": "Cursor Prompt Enhancer",
  "description": "Enhance natural language prompts before sending them to AI for better code generation",
  "version": "0.0.1",
  "publisher": "VrishnViswaSathyamoorthy",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "cursor",
    "ai",
    "prompt",
    "enhancement",
    "gpt"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorEnhancer.enhancePrompt",
        "title": "✨ Enhance Prompt",
        "icon": "$(sparkle)"
      },
      {
        "command": "cursorEnhancer.enhanceSelection",
        "title": "✨ Enhance Selected Text",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cursorEnhancer.enhanceSelection",
          "when": "editorHasSelection",
          "group": "1_modification@1"
        }
      ],
      "editor/title": [
        {
          "command": "cursorEnhancer.enhancePrompt",
          "when": "editorIsOpen",
          "group": "navigation@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cursorEnhancer.enhancePrompt",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cursor Prompt Enhancer",
      "properties": {
        "cursorEnhancer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for prompt enhancement",
          "markdownDescription": "Enter your OpenAI API key. Get one at [OpenAI Platform](https://platform.openai.com/api-keys)"
        },
        "cursorEnhancer.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": ["gpt-4o-mini", "gpt-4o", "gpt-3.5-turbo"],
          "description": "OpenAI model to use for enhancement"
        },
        "cursorEnhancer.maxTokens": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 4000,
          "description": "Maximum tokens for enhanced prompt"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "@types/node-fetch": "^2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KingReaper6940/CursorEnhancer.git"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Vrishn Viswa Sathyamoorthy",
    "email": "vrishnviswa.sathyamoorthy@gmail.com"
  },
  "homepage": "https://github.com/KingReaper6940/CursorEnhancer#readme",
  "bugs": {
    "url": "https://github.com/KingReaper6940/CursorEnhancer/issues"
  }
}
